<%= turbo_stream.replace "budget-modal" do %>
  <div id="budget-modal" 
       class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 flex"
       data-controller="modal"
       data-action="click->modal#backdropClick">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-2xl shadow-lg rounded-md bg-white">
      <div class="flex items-center justify-between pb-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Edit Budget</h3>
        <button type="button" 
                class="text-gray-400 hover:text-gray-600 focus:outline-none focus:text-gray-600 transition-colors"
                data-action="click->modal#close">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="pt-4">
        <%= render 'form' %>
      </div>
    </div>
  </div>
<% end %> 