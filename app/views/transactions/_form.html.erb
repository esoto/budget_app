<%= simple_form_for @transaction, 
    remote: true, 
    html: { class: "space-y-6" } do |f| %>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Amount Field -->
    <div>
      <%= f.input :amount, 
          label: "Amount",
          input_html: { 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "0.00",
            step: 0.01,
            min: 0
          },
          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
          wrapper: false %>
    </div>
    
    <!-- Date Field -->
    <div>
      <%= f.input :date,
          label: "Date",
          input_html: { 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          },
          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
          wrapper: false %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Category Field -->
    <div>
      <%= f.association :category,
          label: "Category",
          collection: @categories,
          option_value: :id,
          option_text: :name,
          include_blank: "Select a category",
          input_html: { 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          },
          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
          wrapper: false %>
    </div>
    
    <!-- Budget Field -->
    <div>
      <%= f.association :budget,
          label: "Budget",
          collection: @budgets,
          option_value: :id,
          option_text: :name,
          include_blank: "Select a budget",
          input_html: { 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          },
          label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
          wrapper: false %>
    </div>
  </div>
  
  <!-- Description Field -->
  <div>
    <%= f.input :description,
        label: "Description",
        input_html: { 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Enter transaction description...",
          rows: 3
        },
        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
        wrapper: false %>
  </div>
  
  <!-- Form Actions -->
  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <button type="button" 
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-md transition-colors"
            data-action="click->modal#close">
      Cancel
    </button>
    <%= f.submit (@transaction.persisted? ? "Update Transaction" : "Add Transaction"),
        class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition-colors" %>
  </div>
<% end %> 