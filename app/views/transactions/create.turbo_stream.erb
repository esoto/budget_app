<%= turbo_stream.replace "transaction-modal" do %>
  <div id="transaction-modal" class="hidden" data-controller="modal"></div>
<% end %>

<%= turbo_stream.prepend "recent-transactions" do %>
  <div class="px-4 sm:px-6 py-4 border-b border-gray-200 bg-green-50">
    <div class="flex items-center justify-between">
      <div class="flex items-center min-w-0 flex-1 mr-4">
        <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0" 
             style="background-color: <%= @transaction.category.color %>20">
          <div class="w-3 h-3 sm:w-4 sm:h-4 rounded-full" style="background-color: <%= @transaction.category.color %>"></div>
        </div>
        <div class="min-w-0 flex-1">
          <p class="font-medium text-gray-900 text-sm sm:text-base truncate"><%= @transaction.description %></p>
          <p class="text-xs sm:text-sm text-gray-600 truncate">
            <%= @transaction.category.name %> â€¢ <%= @transaction.date.strftime("%b %d, %Y") %>
          </p>
        </div>
      </div>
      <div class="text-right flex-shrink-0">
        <p class="font-semibold text-sm sm:text-base <%= @transaction.amount_class %>">
          <%= @transaction.amount_with_sign %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream.replace "flash-messages" do %>
  <div id="flash-messages" class="fixed top-4 right-4 z-50">
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %> 