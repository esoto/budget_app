<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Budget Dashboard</h1>
          <p class="text-gray-600 mt-1">
            <%= @current_budget&.name || "No active budget" %>
          </p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Add Transaction", new_transaction_path, 
              class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
          <%= link_to "Manage Budget", budgets_path, 
              class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @current_budget %>
      <!-- Budget Overview Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Budget Card -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Total Budget</p>
              <p class="text-2xl font-semibold text-gray-900">
                <%= number_to_currency(@monthly_stats[:total_budget]) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Spent Card -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Total Spent</p>
              <p class="text-2xl font-semibold text-gray-900">
                <%= number_to_currency(@monthly_stats[:total_spent]) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Remaining Card -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Remaining</p>
              <p class="text-2xl font-semibold <%= @monthly_stats[:remaining] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= number_to_currency(@monthly_stats[:remaining]) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Days Remaining Card -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Days Remaining</p>
              <p class="text-2xl font-semibold text-gray-900">
                <%= @monthly_stats[:days_remaining] %> days
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 mb-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Budget Progress</h3>
          <span class="text-sm text-gray-600">
            <%= @monthly_stats[:percentage_used] %>% used
          </span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div class="h-3 rounded-full transition-all duration-300 <%= @monthly_stats[:percentage_used] > 90 ? 'bg-red-500' : @monthly_stats[:percentage_used] > 70 ? 'bg-yellow-500' : 'bg-green-500' %>" 
               style="width: <%= [@monthly_stats[:percentage_used], 100].min %>%"></div>
        </div>
        <div class="flex justify-between text-sm text-gray-600 mt-2">
          <span>$0</span>
          <span><%= number_to_currency(@monthly_stats[:total_budget]) %></span>
        </div>
      </div>

      <!-- Income vs Expenses and Spending by Category -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Income vs Expenses -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Income vs Expenses</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-green-500 rounded-full mr-3"></div>
                <span class="text-gray-700">Income</span>
              </div>
              <span class="font-semibold text-green-600">
                <%= number_to_currency(@income_vs_expenses[:income]) %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-red-500 rounded-full mr-3"></div>
                <span class="text-gray-700">Expenses</span>
              </div>
              <span class="font-semibold text-red-600">
                <%= number_to_currency(@income_vs_expenses[:expenses]) %>
              </span>
            </div>
            <div class="border-t pt-4">
              <div class="flex items-center justify-between">
                <span class="font-semibold text-gray-900">Net</span>
                <span class="font-semibold <%= (@income_vs_expenses[:income] - @income_vs_expenses[:expenses]) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(@income_vs_expenses[:income] - @income_vs_expenses[:expenses]) %>
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Spending by Category -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Spending by Category</h3>
          <div class="space-y-3">
            <% if @spending_by_category.any? %>
              <% @spending_by_category.each do |(category_name, color), amount| %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-4 h-4 rounded-full mr-3" style="background-color: <%= color %>"></div>
                    <span class="text-gray-700 text-sm"><%= category_name %></span>
                  </div>
                  <span class="font-semibold text-gray-900 text-sm">
                    <%= number_to_currency(amount) %>
                  </span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500 text-sm">No expenses recorded yet</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Recent Transactions</h3>
            <%= link_to "View All", transactions_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
          </div>
        </div>
        <div class="divide-y divide-gray-200">
          <% if @recent_transactions.any? %>
            <% @recent_transactions.each do |transaction| %>
              <div class="px-6 py-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center mr-4" 
                         style="background-color: <%= transaction.category.color %>20">
                      <div class="w-4 h-4 rounded-full" style="background-color: <%= transaction.category.color %>"></div>
                    </div>
                    <div>
                      <p class="font-medium text-gray-900"><%= transaction.description %></p>
                      <p class="text-sm text-gray-600">
                        <%= transaction.category.name %> â€¢ <%= transaction.date.strftime("%b %d, %Y") %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold <%= transaction.amount_class %>">
                      <%= transaction.amount_with_sign %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="px-6 py-8 text-center">
              <p class="text-gray-500">No transactions yet</p>
              <%= link_to "Add your first transaction", new_transaction_path, 
                  class: "text-blue-600 hover:text-blue-800 font-medium" %>
            </div>
          <% end %>
        </div>
      </div>

    <% else %>
      <!-- No Budget State -->
      <div class="bg-white rounded-lg shadow-sm p-12 text-center border border-gray-200">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Active Budget</h3>
        <p class="text-gray-600 mb-6">Create your first budget to start tracking your finances</p>
        <%= link_to "Create Budget", new_budget_path, 
            class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
      </div>
    <% end %>
  </div>
</div>
